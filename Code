#include <Servo.h>

const int joystickX = A0;     // Joystick X-axis connected to A0
const int servoPin = 9;       // Servo signal pin connected to D9

Servo myServo;

void setup() {
  myServo.attach(servoPin);   // Attach servo to pin
  pinMode(joystickX, INPUT);  // Set joystick pin as input
}

void loop() {
  int xValue = analogRead(joystickX);      // Read joystick X-axis (0 to 1023)
  int angle = map(xValue, 0, 1023, 0, 180); // Map to servo angle (0° to 180°)

  myServo.write(angle);       // Move servo to angle
  delay(15);                  // Short delay for smooth movement
}
